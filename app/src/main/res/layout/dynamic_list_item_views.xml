<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_height="97dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@drawable/bg_round_shape_icon_frame"
    android:layout_marginLeft="5.3dp"
    android:layout_marginRight="5.3dp"
    android:padding="3dp"
    android:layout_width="97dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeItemLays"
        android:gravity="center"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is my txTs "
            android:textSize="13sp"
            android:textColor="#673AB7"
            android:textAlignment="center"
            android:textStyle="bold|normal"
            android:layout_marginTop="1.9dp"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:id="@+id/item_desc"
            />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>