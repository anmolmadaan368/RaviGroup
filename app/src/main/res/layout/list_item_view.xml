<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="match_parent"
    android:layout_width="130dp"
    android:layout_marginRight="5dp"
    android:backgroundTint="#E6FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="3dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/category_item_relative_lays"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/myimgas"
            android:layout_above="@id/mytxts"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/mytxts"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:text="This is my Text "
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
