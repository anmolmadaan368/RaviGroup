<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="4.7dp"
    android:layout_height="318dp"
    app:cardCornerRadius="19dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_above="@id/submit_btn_outer_lays"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="133dp"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:src="@drawable/remove" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:paddingLeft="1dp"
                android:layout_marginLeft="7dp"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:id="@+id/cart_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:textAlignment="center"
                    android:paddingLeft="3dp"
                    android:text="Product Title"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="Salt Composition : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_salt_compostion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="salt Details " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manufacturer : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/texview_manufacturer_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="manufacturer's details " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txtview_chemical_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chemical Details"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/submit_btn_outer_lays"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_saveforlater"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textAllCaps="false"
                android:layout_marginRight="3dp"
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                android:background="@drawable/bg_color_round_cut_blue"
                android:text="Add to WishList"
               android:textColor="#fff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                android:background="@drawable/bg_color_round_cut_blue"
                android:textAllCaps="false"
                android:layout_marginRight="3dp"
                android:text="Remove"
                android:textColor="#fff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="3dp"
                android:textAlignment="center"
                android:layout_marginRight="3dp"

                android:background="@drawable/bg_color_round_cut_blue"
                android:textAllCaps="false"
                android:text="Buy"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>