    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/raviwwmwdicinesogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:id="@+id/image1"/>

    <ImageView
        android:id="@+id/btn_Already_registered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_left_arrow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp "
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/image1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"

        android:layout_marginBottom="17dp"
        android:id="@+id/tvlogin"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/inpt_name"
        android:layout_below="@id/tvlogin"

        android:layout_margin="3dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Name Here"
            android:inputType="text"
            android:background="@drawable/bg_edittext"
            android:textSize="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/inpt_emailaddress"
        android:layout_below="@id/inpt_name"
        android:layout_margin="7dp"
        android:layout_marginTop="100dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:hint="Enter Email Here"
            android:background="@drawable/bg_edittext"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/inpt_pwd"
        app:passwordToggleEnabled="true"

        android:layout_margin="7dp"
        android:layout_below="@id/inpt_emailaddress">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext"
            android:hint="Enter Password Here"
            android:textSize="20dp"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/confirm_pwd_outer_lays"
        android:layout_below="@id/inpt_pwd"
        android:layout_margin="7dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/confirm_pwd"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Confirm Password"
                android:background="@drawable/bg_edittext"
                android:textSize="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/otp_outer_lays"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:id="@+id/et_otp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=" Enter otp here"
                    android:background="@drawable/bg_edittext"
                    android:textSize="17sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_otp"
                android:gravity="center"
                android:text="Verify"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:layout_weight="0.3"
                android:background="@drawable/bg_color_save_button"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/contact_no_outer_lays"
        android:layout_margin="7dp"
        android:layout_below="@id/confirm_pwd_outer_lays">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Contact Here"
            android:id="@+id/et_contact_no"
            android:nextFocusForward="@id/et_otp"
            android:background="@drawable/bg_edittext"
            android:textSize="20dp"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        style="@style/ThemeOverlay.Material3.TextInputEditText"
        android:layout_below="@id/contact_no_outer_lays"
        android:id="@+id/address_outer_lays"
        android:layout_marginTop="7dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="7"
            android:background="@drawable/bg_edittext"
            android:textSize="20sp"
            android:nextFocusForward="@id/btn_signUp"
            android:hint="enter your address here "
            android:id="@+id/et_address"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_outer_lays"
        android:textAllCaps="false"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="17dp"
        android:paddingLeft="17dp"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textSize="23sp" />


</RelativeLayout>