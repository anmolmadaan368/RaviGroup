<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_bar_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".exampl.SingleProductDetailsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4.7dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="19dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_outer_layss"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_img_from_sigle_layss"
                        android:layout_width="0.3dp"
                        android:layout_height="221dp"
                        android:scaleType="fitXY"
                        android:layout_weight="0.3"
                        android:src="@drawable/remove" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.7"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="1dp">

                        <TextView
                            android:id="@+id/cart_product_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:paddingLeft="3dp"
                            android:layout_marginTop="9dp"
                            android:text="Product Title"
                            android:gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salt Composition : "
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_salt_compostion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="salt Details "
                            android:textAlignment="textStart" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manufacturer : "
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/texview_manufacturer_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="manufacturer's details " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtview_chemical_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chemical Details"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_outer_layss"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/btn_saveforlater_product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_color_round_cut_blue"
                    android:gravity="center"
                    android:layout_marginRight="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_weight="1"
                    android:text="Save Later "
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    app:iconGravity="start" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    >
                <TextView
                    android:id="@+id/btn_buy_product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_color_round_cut_blue"
                    android:gravity="center"
                    android:text="Buy"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>