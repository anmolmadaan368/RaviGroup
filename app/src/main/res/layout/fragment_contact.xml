        <RelativeLayout
            android:id="@+id/contact_contactdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="13dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="9dp"
            android:elevation="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:id="@+id/grover1"
                android:text="Grover Chamber 1st Floor, 4-B, Karol Bagh Delhi,110060"
                android:textColor="#4A4949"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/grover1"
                android:id="@+id/contact_no_outer_lays"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_email"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_email" />

                <TextView
                    android:id="@+id/txtView_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/grover1"
                    android:layout_toRightOf="@id/image_email"
                    android:text="Email: raviworldwidemedicines@gmail.com"
                    android:textColor="#595656"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/contact_no_outer_lays"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_call"
                    android:id="@+id/callMeasure1"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="contact no."
                    android:id="@+id/txt_Contact_No"
                    android:layout_below="@id/txtView_Email"
                    android:layout_toRightOf="@id/callMeasure1"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relativeLayout"
    android:id="@+id/contact_form_outers_lays"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get In Touch"

        android:id="@+id/touch1"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/touch1"
        android:id="@+id/layout1">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Your Name Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout1"
        android:id="@+id/layout2">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Email Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_email"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout2"
        android:id="@+id/layout3">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Contact Number Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_contactno"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout3"
        android:id="@+id/layout4">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Subject Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_subject"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout4"
        android:id="@+id/layout5">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Message Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_message"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>



    <TextView
        android:id="@+id/contactform_submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_btn_bg"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:elevation="9dp"
        android:layout_below="@id/contact_form_outers_lays"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:paddingLeft="29dp"
        android:paddingTop="5dp"
        android:paddingRight="29dp"
        android:paddingBottom="5dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="497dp" />

