        <LinearLayout
            android:id="@+id/contact_contactdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
           android:layout_marginTop="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="9dp"
            android:elevation="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Grover Chamber 1st Floor, 4-B, Karol Bagh Delhi,110060"
                android:textColor="#4A4949"
                android:textSize="21dp"

                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_email" />

                <TextView
                    android:id="@+id/txtView_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:text="Email: raviworldwidemedicines@gmail.com"
                    android:textColor="#595656"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:id="@+id/txt_Contact_No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text=" contact no. "
                    android:textColor="#4C4A4A"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/contact_contactdetails"
            android:layout_marginTop="2dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:id="@+id/contactforms_outerlays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C63102"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DCFBFAFA"
                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/contact_forms_inner_lays"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="Get In Touch"
                                android:textAlignment="center"
                                android:textColor="#039587"
                                android:textSize="25sp"
                                android:textStyle="bold|normal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="Name: "
                                    android:textColor="@color/black"
                                    android:textSize="23dp" />

                                <EditText
                                    android:id="@+id/contactform_name"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="0.7"
                                    android:contentDescription="Enter Your Name"
                                    android:hint="Enter your name here "
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:textColorHint="#837D7D"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2.9dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Email: "
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_email"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight=".7"
                                    android:hint="Enter your email here"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:textColorHint="#837D7D"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2.9dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Contact No: "
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_contactno"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight=".7"
                                    android:hint="Enter your contact no. here "
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:nextFocusForward="@id/contactform_subject"
                                    android:padding="7dp"
                                    android:textColorHint="#837D7D"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Subject"
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_subject"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight=".7"
                                    android:hint="Enter Your Subject here....   "
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:textColorHint="#837D7D"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Message"
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_message"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:hint="Enter You message here "
                                    android:inputType="textMultiLine"
                                    android:minLines="3"
                                    android:nextFocusForward="@id/contactform_submitBtn"
                                    android:padding="2dp"
                                    android:scrollbarAlwaysDrawVerticalTrack="true"
                                    android:scrollbars="vertical"
                                    android:textColorHint="#837D7D"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer_lays"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:background="#9EFDE9E9"
        android:layout_below="@id/contactform_submitBtn"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Copyright © RAVI WORLDWIDE MEDICINES "
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/app_name"
            android:textSize="19sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/contactform_submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_btn_bg"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:elevation="9dp"
        android:layout_below="@id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="29dp"
        android:paddingTop="10dp"
        android:paddingRight="29dp"
        android:paddingBottom="5dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="497dp" />

