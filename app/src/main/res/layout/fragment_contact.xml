        <LinearLayout
            android:id="@+id/contact_contactdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="9dp"
            android:elevation="9dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_headTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address Details"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Grover Chamber 1st Floor, 4-B, Karol Bagh Delhi, 110060"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_email" />

                <TextView
                    android:id="@+id/txtView_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:id="@+id/txt_Contact_No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" contact no. "

                    />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="31dp"
            android:layout_below="@id/contact_contactdetails"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactforms_outerlays"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:background="#DCFBFAFA">

                    <RelativeLayout
                        android:id="@+id/contact_forms_inner_lays"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="Get In Touch"
                                android:textAlignment="center"
                                android:textColor="@color/teal_200"
                                android:textSize="25sp"
                                android:textStyle="bold|normal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="Name: "
                                    android:textColor="@color/black"
                                    android:textSize="23dp" />

                                <EditText
                                    android:id="@+id/contactform_name"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:layout_weight="0.7"
                                    android:contentDescription="Enter Your Name"
                                    android:hint="Enter your name here "
                                    android:padding="7dp"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2.9dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Email: "
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_email"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight=".7"
                                    android:hint="Enter your email here"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:padding="7dp"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2.9dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Contact No: "
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_contactno"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:inputType="number"
                                    android:layout_weight=".7"
                                    android:nextFocusForward="@id/contactform_subject"
                                    android:maxLines="1"
                                    android:hint="Enter your contact no. here "
                                    android:padding="7dp"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Subject"
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_subject"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight=".7"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:hint="Enter Your Subject here....   "
                                    android:padding="7dp"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:text="Message"
                                    android:textColor="@color/black"
                                    android:textSize="23sp" />

                                <EditText
                                    android:id="@+id/contactform_message"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:hint="Enter You message here "
                                    android:nextFocusForward="@id/contactform_submitBtn"
                                    android:minLines="3"
                                    android:inputType="textMultiLine"
                                    android:padding="2dp"
                                    android:scrollbarAlwaysDrawVerticalTrack="true"
                                    android:scrollbars="vertical"
                                    android:textSize="15sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contactform_submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn_bg"
                android:paddingLeft="29dp"
                android:paddingTop="5dp"
                android:paddingRight="29dp"
                android:paddingBottom="5dp"
                android:backgroundTint="@color/white"
                android:elevation="9dp"
                android:backgroundTintMode="multiply"
                android:text="Submit"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/contactforms_outerlays"
                app:layout_constraintBottom_toBottomOf="@id/contactforms_outerlays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer_lays"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        android:background="#9EFFFFFF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Copyright © "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="@string/app_name"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingLeft="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Powered by @"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="@string/builders_name"
                android:textSize="19sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>