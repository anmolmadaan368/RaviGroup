                <RelativeLayout
            android:id="@+id/contact_contactdetails"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="13dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="13dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/grover1"
                android:layout_marginLeft="25dp"
                android:text="Grover Chamber 1st Floor, 4-B, Karol Bagh Delhi,110060"
                android:textColor="#4A4949"
                android:textSize="13dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />



                <ImageView
                    android:layout_width="20dp"
                    android:layout_below="@id/grover1"
                    android:layout_height="20dp"
                    android:id="@+id/image_email"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_email" />

                <TextView
                    android:id="@+id/txt_Email_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/grover1"
                    android:layout_toRightOf="@id/image_email"
                    android:padding="5dp"
                    android:text="Email: raviworldwidemedicines@gmail.com"
                    android:textColor="#595656"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                android:layout_marginBottom="15dp"
                android:id="@+id/callMeasure1"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@id/callMeasure1"
                android:id="@+id/txt_Contact_no"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="30dp"
                android:textStyle="bold"/>

<!--        </RelativeLayout>-->



    </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/contactform_submitBtn"
                android:text="Copyright Â© RAVI WORLDWIDE MEDICINES "
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:id="@+id/copyrit"
                android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get In Touch"
        android:id="@+id/touch1"
        android:layout_below="@+id/contact_contactdetails"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/touch1"
        android:id="@+id/layout1">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Your Name Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout1"
        android:id="@+id/layout2">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Email Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_email"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout2"
        android:id="@+id/layout3">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Contact Number Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_contactno"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout3"
        android:id="@+id/layout4">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Subject Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_subject"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout4"
        android:id="@+id/layout5">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Message Here"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/contactform_message"/>

    </com.google.android.material.textfield.TextInputLayout>




    <TextView
        android:id="@+id/contactform_submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_btn_bg"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:elevation="9dp"
        android:layout_below="@id/layout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="29dp"
        android:paddingTop="5dp"
        android:paddingRight="29dp"
        android:paddingBottom="5dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="497dp" />

