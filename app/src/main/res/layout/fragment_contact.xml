<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#7AA8E3FD"
    android:layout_height="match_parent"
    tools:context=".fragment.ContactFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:id="@+id/contact_headTitle"/>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_below="@id/contact_headTitle"
        tools:layout_editor_absoluteX="0dp">
    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:id="@+id/grover1"
                android:text="Grover Chamber 1st Floor, 4-B, Karol Bagh Delhi,110060"
                android:textColor="#4A4949"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/grover1"
                android:id="@+id/contact_no_outer_lays"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_email"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_email" />

                <TextView
                    android:id="@+id/txtView_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/grover1"
                    android:layout_toRightOf="@id/image_email"
                    android:text="Email: raviworldwidemedicines@gmail.com"
                    android:textColor="#E9009688"
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/contact_no_outer_lays"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_call"
                    android:id="@+id/callMeasure1"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="contact no."
                    android:textColor="#C4FF5722"
                    android:id="@+id/txt_Contact_No"
                    android:textSize="17sp"
                    android:layout_below="@id/txtView_Email"
                    android:layout_toRightOf="@id/callMeasure1"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </RelativeLayout>



    <LinearLayout
        android:id="@+id/contact_form_outers_lays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/touch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Get In Touch"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/touch1"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactform_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Your Name Here"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/layout1"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactform_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Email Here"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/layout2"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactform_contactno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Contact Number Here"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/layout3"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactform_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Subject Here"
                android:inputType="text"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout4"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactform_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:hint="Enter Message Here"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="5dp"
                android:textStyle="bold"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/contactform_submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_btn_bg"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="multiply"
        android:elevation="9dp"
        android:layout_below="@id/contact_form_outers_lays"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:paddingLeft="29dp"
        android:paddingTop="5dp"
        android:paddingRight="29dp"
        android:paddingBottom="5dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="497dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/contactform_submitBtn"
        android:text="Â© RAVI WORLDWIDE MEDICINES "
        android:textSize="16sp"
        android:layout_marginTop="13dp"
        android:id="@+id/copyrit"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_below="@id/copyrit"
        android:layout_alignParentRight="true"

        android:text="Powered BY MT "
        android:textColor="#546E7A"
        android:textSize="16sp" />



</RelativeLayout>